// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Usuario {
  id                   Int       @id @default(autoincrement())
  nome                 String
  sobrenome            String
  email                String    @unique
  senha                String
  instituicaoParceira  String    // Corrigido o nome do campo
  telefone             String    // Adicionado o campo de telefone
  perfilDeAcesso        String    // Adicionado o campo de perfil de acesso
  tipo                 String    // Adicionado o campo de tipo
  linkCurriculo        String    // Adicionado o campo de linkCurriculo
  aprovacao            Boolean   // Adicionado o campo de aprovacao
  ativo                Boolean
  cargo                String
  revisor              String[] @default([])
  data                 String
  hora                 String
  areaAcademica        String
  atividadesDeInteresse  String[] @default([])
          // Adicionado o relacionamento com a área acadêmica
            // Adicionado o relacionamento com a área de interesse
}

model AreaAcademica {
  id         Int       @id @default(autoincrement())
  descricao  String
  ativo      Boolean

}

model AreaInteresse {
  id         Int       @id @default(autoincrement())
  descricao  String
  ativo      Boolean

}



