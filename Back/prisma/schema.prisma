// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Usuario {
  id Int @id @default(autoincrement())
  nome String
  sobrenome String
  email String @unique
  senha String
  instituicao String

}


model AreaAcademica {
  id       Int      @id @default(autoincrement())
  descricao String
  ativo    Boolean
}

model AreaInteresse {
  id       Int      @id @default(autoincrement())
  descricao String
  ativo    Boolean
}
